<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Sixtyfour&display=swap" rel="stylesheet">
    <style>
        *{
            margin: 0;
            font-family: 'Sixtyfour', sans-serif;
            color: aliceblue;
            overflow-x: hidden;
        }
        body{
            background-color: black;
        }
    </style>
    <title>Document</title>
</head>
<body>
    <h1 class="text-center my-5 text-white">Random Number Generator</h1>
    <form action="/random" method="post">
        <div class="input-group input-group-sm mb-3" style="width: 30%; margin: 0 auto;">
            <button class="btn btn-outline-secondary fs-6" type="submit" id="button-addon1">Input</button>
            <input type="text" name="total" class="form-control" placeholder="jumlah angka" aria-label="Example text with button addon" aria-describedby="button-addon1">
        </div>
    </form>
    
    <% if(locals.data.length>0){ %>
        <form action="/find" method="post">
            <div class="input-group input-group-sm mb-3" style="width: 30%; margin: 0 auto;">
                <button class="btn btn-outline-secondary fs-6" type="submit" id="button-addon1">Cari</button>
                <input type="text" name="find" class="form-control" placeholder="cari angka keluar" aria-label="Example text with button addon" aria-describedby="button-addon1">
            </div>
        </form>
        <form action="/cetak" method="post">
            <div class="input-group input-group-sm mb-3" style="width: 30%; margin: 0 auto;">
                <button class="btn btn-outline-secondary fs-6" type="submit" id="button-addon1">Cetak</button>
            </div>
        </form>
        <% if (locals.find){%>
            <p class="text-center text-success">Angka Anda Keluar</p>
        <% } %>
        <div class="d-flex gap-5 row ms-5 mt-5">
            <% data.forEach(number=>{ %>
                <div class="number border border-3 border-light p-2 col-lg-1 col-sm-12 text-center">
                    <h5><%= number %></h5>
                </div>
            <% }) %>
        </div>
    <% } %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>